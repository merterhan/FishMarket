@model List<FishMarket.Dto.FishDto>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Type</th>
            <th scope="col">Price</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var fish in Model)
        {
            <tr>
                <th colspan="1">@fish.Type</th>
                <td colspan="1">@fish.Price</td>
                <td colspan="1"><button type="button" class="btn btn-primary btn-sm" onclick="Edit('@fish.Id')">Edit</button></td>
                <td colspan="1"><button type="button" class="btn btn-primary btn-sm" onclick="Delete('@fish.Id')">Edit</button></td>
            </tr>
        }
    </tbody>
</table>

